<div class="container">
  <div class="row mt-3">
    <div class="col ml-5">
      <h4>店舗一覧</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-2"></div>
    <div class="col-8">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th class="col-4">店舗名</th>
            <th class="col-8">住所</th>
          </tr>
        </thead>
        <% @stores.each do |store| %>
        <tbody>
          <tr>
            <td><%= link_to store.store_name, admin_store_path(store.id), data: {"turbolinks" => false} %></td>
            <td><%= store.store_address %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>