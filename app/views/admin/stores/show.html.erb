<div class="container">
  <div class="row">
    <div class="col">
      店舗詳細
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div id="map"></div>
      <style>
      #map {
        height: 300px;
        width: 500px;
      }
      </style>
      <script>
        let map
        function initMap(){
          geocoder = new google.maps.Geocoder()
          
          map = new google.maps.Map(document.getElementById('map'), {
            center: {lat: <%= @store.latitude %>, lng:<%= @store.longitude %>},
            zoom: 15,
          });
          
          marker = new google.maps.Marker({
            position: {lat: <%= @store.latitude %>, lng:<%= @store.longitude %>},
            map: map
          });
        }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap" async defer></script>
    </div>
    <div class="col">
      <div class="row">
        <div class="col">
          店舗名
        </div>
        <div class="col">
          <%= @store.store_name %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          住所
        </div>
        <div class="col">
          <%= @store.store_address %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          店舗紹介
        </div>
        <div class="col">
          <%= @store.store_introduction %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= link_to "編集する", edit_admin_store_path %>
        </div>
      </div>
    </div>
  </div>
</div>