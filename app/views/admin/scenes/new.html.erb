<div class="container">
  <div class="row">
    <div class="">
      シーン追加
    </div>
  </div>
  <%= form_with model: @scene, url: admin_scenes_path do |f| %>
  <div class="row">
    <div class="col">
      <%= f.label "シーン名" %>
    </div>
    <div class="col">
      <%= f.text_field :scene_name %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.label "住所" %>
    </div>
    <div class="col">
      <%= f.text_area :scene_address %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.label "アニメid" %>
    </div>
    <div class="col">
      <%= f.collection_select :anime_id, Anime.all, :id, :title, options = { include_blank: "--選択してください--" } %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.submit "追加する" %>
    </div>
  </div>
  <% end %>
</div>