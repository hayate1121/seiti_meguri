<div class="container">
  <div class="row mt-3">
    <div class="col ml-5">
      <h4>ユーザー編集</h4>
    </div>
  </div>
  <%= form_with model: @user, url: admin_user_path do |f| %>
  <div class="row mt-3">
    <div class="col-2"></div>
    <div class="col-8">
      <table class="table table-bordered">
        <tr class="thead-light">
          <th class="col-2"><%= f.label "ユーザー名" %></th>
          <td class="col-6"><%= f.text_field :name %></td>
        </tr>
        <tr class="thead-light">
          <th class="col-2"><%= f.label "自己紹介文" %></th>
          <td class="col-6"><%= f.text_area :introduction, cols: 60 %></td>
        </tr>
        <tr class="thead-light">
          <th class="col-2"><%= f.label "メールアドレス" %></th>
          <td class="col-6"><%= f.text_field :email %></td>
        </tr>
        <tr class="thead-light">
          <th class="col-2"><%= f.label "ステータス" %></th>
          <td class="col-6">
            <%= f.select :is_deleted, {"有効": false, "退会": true} %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-2 mx-auto">
      <%= f.submit "保存する", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>