<div class="container">
  <div class="row">
    <div class="col">
      ユーザー編集
    </div>
  </div>
  <%= form_with model: @user, url: admin_user_path do |f| %>
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <th><%= f.label "ユーザー名" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th><%= f.label "自己紹介文" %></th>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <th><%= f.label "メールアドレス" %></th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th><%= f.label "ステータス" %></th>
          <td>
            <%= f.select :is_deleted, {"有効": false, "退会": true} %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.submit "保存する" %>
    </div>
  </div>
  <% end %>
</div>