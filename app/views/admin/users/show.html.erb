<div class="container">
  <div class="row mt-3">
    <div class="col ml-5">
      <h4>ユーザー詳細</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-2"></div>
    <div class="col-8">
      <table class="table table-bordered">
        <tr class="thead-light">
          <th class="col-2">ユーザー名</th>
          <td class="col-6"><%= @user.name %></td>
        </tr>
        <tr class="thead-light">
          <th class="col-2">自己紹介文</th>
          <td class="col-6"><%= @user.introduction %></td>
        </tr>
        <tr class="thead-light">
          <th class="col-2">メールアドレス</th>
          <td class="col-6"><%= @user.email %></td>
        </tr>
        <tr class="thead-light">
          <th class="col-2">ステータス</th>
          <td class="col-6">
            <% if @user.is_deleted == false %>
              有効
            <% else %>
              退会
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-2 mx-auto">
      <%= link_to "編集する", edit_admin_user_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>