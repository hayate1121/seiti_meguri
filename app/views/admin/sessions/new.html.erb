<div class="container">
  <div class="row">
    <div class="col">
      <h2>管理者ログイン</h2>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col">
      <%= f.label "メールアドレス" %>
    </div>
    <div class="col">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.label "パスワード" %>
    </div>
    <div class="col">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.submit "ログインする" %>
    </div>
  </div>
<% end %>

<%= render "admin/shared/links" %>

</div>