<div class="container">
  <div class="row mt-5">
    <div class="col text-center">
      <h4>管理者ログイン</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-4"></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="col">
      <div class="row mt-5">
        <div class="col">
          <%= f.label "メールアドレス" %>
        </div>
        <div class="col">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col">
          <%= f.label "パスワード" %>
        </div>
        <div class="col">
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>
    
      <div class="row mt-4">
        <div class="col-4 mx-auto">
          <%= f.submit "ログイン", class: "btn btn-info" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
      
  <%= render "admin/shared/links" %>
  
</div>