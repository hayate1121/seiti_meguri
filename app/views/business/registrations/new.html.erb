<h2>店舗登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "business/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :store_image, "画像" %>
    <%= f.file_field :store_image, accept: "image/*" %>
  </div>

  <div class="field">
    <%= f.label :store_name, "店舗名" %>
    <%= f.text_field :store_name, autofocus: true, autocomplete: "store_name" %>
  </div>
  
  <div class="field">
    <%= f.label :store_introduction, "店舗紹介" %>
    <%= f.text_area :store_introduction, autofocus: true, autocomplete: "store_introduction" %>
  </div>
  
  <div class="field">
    <%= f.label :store_address, "住所" %>
    <%= f.text_area :store_address, autofocus: true, autocomplete: "store_address" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（6文字以上）" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<div class="row">
  <div class="col">
    登録がお済みの方は
    <%= link_to "こちら", new_store_session_path %>
    からログインしてください。
  </div>
</div>
