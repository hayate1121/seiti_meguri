<div class="container">
  <div class="row mt-5">
    <div class="col ml-5">
      <h4>店舗登録</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-1"></div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "business/shared/error_messages", resource: resource %>
    <div class="col">
      <div class="row mt-5">
        <div class="col-6">
          <%= f.label :store_image, "画像" %>
        </div>
        <div class="col-6">
          <%= f.file_field :store_image, accept: "image/*" %>
        </div>
      </div>
      
      <div class="row mt-3">
        <div class="col-6">
          <%= f.label :store_name, "店舗名" %>
        </div>
        <div class="col-6">
          <%= f.text_field :store_name, autofocus: true, autocomplete: "store_name" %>
        </div>
      </div>
      
      <div class="row mt-3">
        <div class="col-6">
          <%= f.label :store_introduction, "店舗紹介" %>
        </div>
        <div class="col-6">
          <%= f.text_area :store_introduction, autofocus: true, cols: 50, autocomplete: "store_introduction" %>
        </div>
      </div>
      
      <div class="row mt-3">
        <div class="col-6">
          <%= f.label :store_address, "住所" %>
        </div>
        <div class="col-6">
          <%= f.text_area :store_address, autofocus: true, cols: 50, autocomplete: "store_address" %>
        </div>
      </div>
    
      <div class="row mt-3">
        <div class="col-6">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    
      <div class="row mt-3">
        <div class="col-6">
          <%= f.label :password, "パスワード（6文字以上）" %>
        </div>
        <div class="col-6">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>
    
      <div class="row mt-3">
        <div class="col-6">
          <%= f.label :password_confirmation, "パスワード（確認用）" %>
        </div>
        <div class="col-6">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
    
      <div class="row mt-3">
        <div class="col-6"></div>
        <div class="col-6">
          <%= f.submit "新規登録", class: "btn btn-info" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  
  <div class="row mt-4">
    <div class="col-1"></div>
    <div class="col">
      登録がお済みの方は
      <%= link_to "こちら", new_store_session_path %>
      からログインしてください。
    </div>
  </div>
</div>