<div class="container">
  <div class="row">
    <div class="">
      店舗情報編集
    </div>
  </div>
  <%= form_with model: @store do |f| %>
  <div class="row">
    <div class="">
      <%= f.label "店舗名" %>
    </div>
    <div class="">
      <%= f.text_field :store_name %>
    </div>
  </div>
  <div class="row">
    <div class="">
      <%= f.label "住所" %>
    </div>
    <div class="">
      <%= f.text_field :store_address %>
    </div>
  </div>
  <div class="row">
    <div class="">
      <%= f.label "店舗紹介" %>
    </div>
    <div class="">
      <%= f.text_area :store_introduction %>
    </div>
  </div>
  <div class="row">
    <div class="">
      <%= f.label "関連アニメ" %>
    </div>
    <div class="">
      <%= f.text_field :anime_id %>
    </div>
  </div>
  <div class="row">
    <div class="">
      <%= f.submit "保存する" %>
    </div>
  </div>
  <% end %>
</div>