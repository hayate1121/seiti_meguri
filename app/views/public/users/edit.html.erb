<div class="container">
  <div class="row">
    <div class="">
      <h4>ユーザー情報編集</h4>
    </div>
  </div>
  <%= form_with model: @user do |f| %>
  <div class="row">
    <div class="">
      <%= f.label "ユーザー名" %>
    </div>
    <div class="">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="">
      <%= f.label "自己紹介文" %>
    </div>
    <div class="">
      <%= f.text_area :introduction %>
    </div>
  </div>
  <div class="row">
    <div class="">
      <%= f.label "メールアドレス" %>
    </div>
    <div class="">
      <%= f.text_area :email %>
    </div>
  </div>
  <div class="row">
    <div class="">
      <%= f.submit "保存する", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>