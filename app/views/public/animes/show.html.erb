<div class="container">
  <div class="row">
    <div class="col">
      <h5>作品詳細</h5>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= image_tag @anime.get_anime_image(100,100) %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      作品名
    </div>
    <div class="col">
      <%= @anime.title %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      舞台
    </div>
    <div class="col">
      <%= @anime.spot %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      シーン一覧
    </div>
    <div class="col">
      <% @scenes.each do |scene| %>
        <%= link_to scene.scene_name, scene_path(scene.id) %><br>
      <% end %>
    </div>
  </div>
</div>