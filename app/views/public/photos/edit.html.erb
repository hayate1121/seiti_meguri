<div class="container">
  <div class="row mt-3">
    <div class="col ml-5">
      <h4>投稿編集</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-10">
      <%= form_with model: @photo, url: photo_path do |f| %>
      <div class="row mt-3">
        <div class="col-3">
          <%= f.label "写真" %>
        </div>
        <div class="col-9">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-3">
          <%= f.label "住所" %>
        </div>
        <div class="col-9">
          <%= f.text_field :address %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-3">
          <%= f.label "コメント" %>
        </div>
        <div class="col-9">
          <%= f.text_field :comment %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-3"></div>
        <div class="col-9">
          <%= f.submit "保存する", class: "btn btn-success" %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-3"></div>
        <% if current_user == @photo.user %>
          <div class="col-9">
            <%= link_to "削除する", photo_path, method: :delete, class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
  
</div>